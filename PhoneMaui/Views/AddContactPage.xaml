
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneMaui.AddContactPage">

    <StackLayout>
        <Label Text="Add Contact" FontSize="Large" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

        <Entry x:Name="firstNameEntry" Placeholder="First Name" />
        <Entry x:Name="lastNameEntry" Placeholder="Last Name" />
        <Entry x:Name="emailEntry" Placeholder="Email" />
        <Entry x:Name="phoneEntry" Placeholder="Phone Number" />

        <Button Text="Save" Clicked="Save_Clicked" />
    </StackLayout>

</ContentPage>
